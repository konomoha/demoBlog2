{% extends "base.html.twig" %}

{% block title %}
    Blog Symfony | Détail de l'article
{% endblock %}

{% block body %}

<h1 class="text-center">Détails de {{article.titre}}</h1>
 <div class="col-md-12">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm  position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">World</strong>
                    <h3 class="mb-0">Featured post</h3>
                    <div class="mb-1 text-muted">Publié le {{article.date|date('d/m/Y')}} à {{article.date|date('H:i:s')}}</div>
                    {{article.contenu|striptags}}
                    <p class="mt-3">
                    <a href="#" class="btn btn-dark text-white col-2">Modifier</a>
                    <a href="#" class="btn btn-dark text-white col-2">Supprimer</a>
                    </p>

                </div>
                <div class="col-auto d-none d-lg-block">

                      <img src="{{article.photo}}" alt="">

                </div>
            </div>
        </div>
    
{% endblock %}